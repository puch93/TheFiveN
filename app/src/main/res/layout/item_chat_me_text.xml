<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingTop="@dimen/chat_item_padding_top"
        android:paddingBottom="@dimen/chat_item_padding_bottom">

        <TextView
            android:id="@+id/tv_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="3dp"
            android:textSize="12dp"
            android:textColor="@color/color_f9957f"
            android:layout_marginRight="5dp"
            android:text="1" />

        <TextView
            android:id="@+id/tv_send_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="9.3dp"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:paddingBottom="5dp"
            android:textColor="@color/color_808080"
            android:textSize="8dp"
            tools:text="오전 11:16" />

        <TextView
            android:id="@+id/tv_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_chat_me"
            android:gravity="left"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4dp"
            android:maxWidth="270dp"
            android:minWidth="40dp"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingRight="12dp"
            android:paddingBottom="11dp"
            android:textColor="@color/color_white"
            android:textSize="14dp"
            tools:text="ewasdfasdaskjdfl;asdjkf;lasjkdfl;asdjkf;lsajf;fasdfasdfasfrwer" />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10.7dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_circle" />

    </LinearLayout>

</LinearLayout>