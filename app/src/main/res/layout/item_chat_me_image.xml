<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/chat_item_padding_top"
      android:paddingBottom="@dimen/chat_item_padding_bottom"
      android:gravity="right"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="3dp"
        android:textSize="12dp"
        android:textColor="@color/color_f9957f"
        android:layout_marginRight="5dp"
        android:text="1" />

    <TextView
        android:id="@+id/tv_send_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="8dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="9.3dp"
        android:gravity="bottom"
        android:textColor="@color/color_808080"
        android:includeFontPadding="false"
        tools:text="오전 11:16"
        />

    <ImageView
        android:id="@+id/iv_send_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"/>

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10.7dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_circle"/>

  </LinearLayout>

</LinearLayout>