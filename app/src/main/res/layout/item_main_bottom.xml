<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:background="@color/color_white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardCornerRadius="13dp"
        app:cardElevation="5dp"
        app:contentPadding="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    tools:background="@color/color_eeeeee" />

                <TextView
                    android:id="@+id/tv_indicator"
                    android:layout_width="30dp"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="6.7dp"
                    android:background="@drawable/box_main_profile_number"
                    android:gravity="center"
                    android:text="0/0"
                    android:textColor="@color/color_white"
                    android:textSize="10dp" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="16.3dp"
                android:paddingTop="12.7dp"
                android:paddingRight="3.7dp"
                android:paddingBottom="12.7dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="49.7dp"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="닉네임"
                            android:textColor="@color/color_858585"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tv_nick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:textColor="@color/color_3a435e"
                            android:textSize="14dp"
                            tools:text="홍길동" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="49.7dp"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="나이"
                            android:textColor="@color/color_858585"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:textColor="@color/color_3a435e"
                            android:textSize="14dp"
                            tools:text="30" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="49.7dp"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="지역"
                            android:textColor="@color/color_858585"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:textColor="@color/color_3a435e"
                            android:textSize="14dp"
                            tools:text="서울" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="49.7dp"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="궁합도"
                            android:textColor="@color/color_858585"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tv_cgpms_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:textColor="@color/color_3a435e"
                            android:textSize="14dp"
                            android:text="\u003F\u003F" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="49.7dp"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="기본성향"
                            android:textColor="@color/color_858585"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/tv_cgpms_kind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:textColor="@color/color_3a435e"
                            android:textSize="14dp"
                            tools:text="CP" />
                    </LinearLayout>
                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="53.7dp"
                    android:layout_height="53.7dp"
                    android:src="@drawable/btn_main_heart_shake_off" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>