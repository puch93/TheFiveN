<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <size android:width="35dp" android:height="1dp" />
                    <solid android:color="#ececec" /> <!-- custom color - track off -->
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <size android:width="35dp" android:height="1dp" />
                    <solid android:color="#fe6949" /> <!-- custom color - track off -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>